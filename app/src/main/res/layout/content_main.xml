<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="mainActivity"
            type="com.zkteco.silkiddemo.activity.MainActivity" />
    </data>




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:context=".MainActivity"
            android:background="#7FB3D5"
            tools:showIn="@layout/activity_main">

            <LinearLayout
                android:id="@+id/topPanel"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/top_panel"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-thin"
                    android:letterSpacing="0.03"
                    android:text="Registration"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/topPanel"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/edt_id"
                    android:layout_width="320dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/input_stroke"
                    android:drawableStart="@drawable/ic_baseline_mode_edit_outline_24"
                    android:fontFamily="sans-serif-thin"
                    android:hint="Employee ID"
                    android:inputType="number"
                    android:paddingLeft="20dp"
                    android:textAlignment="center" />

                <EditText
                    android:id="@+id/edt_name"
                    android:layout_width="320dp"
                    android:layout_height="50dp"
                    android:textAlignment="center"
                    android:fontFamily="sans-serif-thin"
                    android:background="@drawable/input_stroke"
                    android:hint="Employee Name"
                    android:drawableStart="@drawable/ic_baseline_person_outline_24"
                    android:paddingLeft="20dp"
                    android:inputType="text"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"/>

                <EditText
                    android:id="@+id/edt_designation"
                    android:layout_width="320dp"
                    android:layout_height="50dp"
                    android:background="@drawable/input_stroke"
                    android:fontFamily="sans-serif-thin"
                    android:textAlignment="center"
                    android:hint="Employee Designation"
                    android:drawableStart="@drawable/ic_baseline_work_outline_24"
                    android:paddingLeft="20dp"
                    android:layout_gravity="center"
                    android:inputType="text"
                    android:layout_marginTop="10dp"/>

                <EditText
                    android:id="@+id/edt_note"
                    android:layout_width="320dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/roundedlayout"
                    android:fontFamily="sans-serif-thin"
                    android:hint="Note"
                    android:inputType="text"
                    android:paddingLeft="20dp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Please Press your finger in FingerPrint Scanner !"
                    android:textStyle="bold|italic"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-thin"
                    android:layout_margin="5dp"
                    android:textColor="#ECF0F1"
                    android:textSize="14dp"
                    android:id="@+id/textView" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/bg"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="310dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignTop="@+id/button"
                            android:layout_gravity="center"
                            android:src="@drawable/fingerprint" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/bottom_panel"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/button"
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:background="@drawable/roundedbutton"
                            android:fontFamily="sans-serif-thin"
                            android:onClick="OnBnBegin"
                            android:text="Start"
                            android:textColor="@color/WhiteColor"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/button3"
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/roundedbutton"
                            android:fontFamily="sans-serif-thin"
                            android:onClick="OnBnEnroll"
                            android:text="Entry"
                            android:textColor="@color/WhiteColor"
                            android:textSize="20dp"
                            android:textStyle="bold" />


                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/roundedbutton"
                        android:textStyle="bold"
                        android:layout_marginLeft="20dp"
                        android:textSize="20dp"
                        android:textColor="@color/WhiteColor"
                        android:text="Stop"
                        android:id="@+id/button2"
                        android:onClick="OnBnStop" />



                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/button4"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/WhiteColor"
                        android:background="@drawable/roundedbutton"
                        android:textSize="20dp"
                        android:onClick="OnBnVerify"
                        android:text="verify" />

                </LinearLayout>





        </RelativeLayout>

</layout>

