<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="mainActivity"
            type="com.zkteco.silkiddemo.activity.MainActivity" />
    </data>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:context=".MainActivity"
            android:background="#ECF0F1"
            tools:showIn="@layout/activity_main">

            <LinearLayout
                android:id="@+id/topPanel"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:layout_gravity="center"
                android:background="@drawable/blue_bg"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.03"
                    android:text="Registration"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp"
                    android:textStyle="bold|italic" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/topPanel"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Please Select Your Company Name"
                        android:textStyle="bold|italic"
                        android:fontFamily="sans-serif-condensed-light"
                        android:layout_margin="8dp"
                        android:textColor="@color/BlackColor"
                        android:textSize="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                        <com.jaredrummler.materialspinner.MaterialSpinner
                            android:id="@+id/companySpinner"
                            android:layout_width="match_parent"
                            android:textAlignment="center"
                            android:textSize="17dp"
                            android:textColor="#2471A3"
                            app:ms_arrow_tint="@color/BlackColor"
                            android:textStyle="bold|italic"
                            android:textColorHint="#2471A3"
                            android:fontFamily="sans-serif-medium"
                            android:hint="Company Name"
                            android:layout_height="50dp"/>

                    </LinearLayout>



                </LinearLayout>

                 <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Please Select Your Department Name"
                        android:textStyle="bold|italic"
                        android:fontFamily="sans-serif-condensed-light"
                        android:layout_margin="8dp"
                        android:textColor="@color/BlackColor"
                        android:textSize="16dp" />

                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_margin="10dp"
                         android:orientation="vertical">

                <com.jaredrummler.materialspinner.MaterialSpinner
                    android:id="@+id/departmentSpinner"
                    android:layout_width="match_parent"
                    android:textSize="17dp"
                    android:textColor="#2471A3"
                    android:textStyle="bold|italic"
                    android:textColorHint="#2471A3"
                    android:fontFamily="sans-serif-medium"
                    android:textAlignment="center"
                    app:ms_arrow_tint="@color/BlackColor"
                    android:hint="Department Name"
                    android:layout_height="50dp"/>

                     </LinearLayout>

                 </LinearLayout>

                 <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Please Select Employee Name"
                        android:textStyle="bold|italic"
                        android:fontFamily="sans-serif-condensed-light"
                        android:layout_margin="8dp"
                        android:textColor="@color/BlackColor"
                        android:textSize="16dp" />

                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_margin="10dp"
                         android:orientation="vertical">

                <com.jaredrummler.materialspinner.MaterialSpinner
                    android:id="@+id/dataSpinner"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:textSize="17dp"
                    android:textColor="#2471A3"
                    android:textStyle="bold|italic"
                    android:textColorHint="#2471A3"
                    app:ms_arrow_tint="@color/BlackColor"
                    android:fontFamily="sans-serif-medium"
                    android:hint="No Employee Found"
                    android:layout_height="50dp"/>

                     </LinearLayout>

                 </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="50dp"
                    android:layout_marginBottom="50dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="Please Select all required Fill then go to new page and press your finger in the ZKTeco FingerPrint Sensor !"
                    android:textColor="@color/BlackColor"
                    android:textSize="17dp"
                    android:textStyle="bold|italic" />


                </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:orientation="horizontal">


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/goNext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:paddingEnd="10dp"
                    android:paddingRight="10dp"
                    android:background="@drawable/roundedbutton"
                    android:drawableEnd="@drawable/ic_baseline_east_24"
                    android:fontFamily="sans-serif-thin"
                    android:text="Next"
                    android:textColor="@color/WhiteColor"
                    android:textSize="27dp"
                    android:textStyle="bold|italic" />


            </LinearLayout>




        </RelativeLayout>

</layout>

